{{ 'section-featured-testimonial.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  class="
    testimonial
    color-{{ section.settings.color_scheme }}
    gradient
    {% unless section.settings.background_style == 'none'
    and settings.text_boxes_border_thickness > 0
    or settings.text_boxes_shadow_opacity > 0 %}
      background-{{ section.settings.background_style }}
    {% endunless %}
  "
>
  <div
    class="
      page-width
      section-{{ section.id }}-padding
      isolate
      {% if settings.animations_reveal_on_scroll %}
        scroll-trigger animate--slide-in
      {% endif %}
    "
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin testimonial__title">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}

    <div
      class="testimonial-list contains-content-container"
    >
      {%- for block in section.blocks -%}
        {% render 'testimonial',
          testimonial: block.settings,
          section_settings: section.settings,
          section: section,
          block: block
        %}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.featured-testimonial.name",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "t:sections.featured-testimonial.settings.title.default",
      "label": "t:sections.featured-testimonial.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "header",
      "content": "t:sections.featured-testimonial.settings.header_image.content"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "square",
          "label": "t:sections.featured-testimonial.settings.image_ratio.options__3.label"
        },
        {
          "value": "circle",
          "label": "t:sections.featured-testimonial.settings.image_ratio.options__4.label"
        }
      ],
      "default": "circle",
      "label": "t:sections.featured-testimonial.settings.image_ratio.label"
    },
    {
      "type": "header",
      "content": "t:sections.featured-testimonial.settings.header_layout.content"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.featured-testimonial.settings.text_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.featured-testimonial.settings.text_alignment.options__2.label"
        }
      ],
      "default": "left",
      "label": "t:sections.featured-testimonial.settings.text_alignment.label"
    },
    {
      "type": "select",
      "id": "background_style",
      "options": [
        {
          "value": "none",
          "label": "t:sections.featured-testimonial.settings.background_style.options__1.label"
        },
        {
          "value": "primary",
          "label": "t:sections.featured-testimonial.settings.background_style.options__2.label"
        }
      ],
      "default": "primary",
      "label": "t:sections.featured-testimonial.settings.background_style.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.featured-testimonial.blocks.column.settings.image.label"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "t:sections.featured-testimonial.blocks.column.settings.text.label"
        },
        {
          "type": "text",
          "id": "author",
          "label": "t:sections.featured-testimonial.blocks.column.settings.author.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-testimonial.presets.name",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
